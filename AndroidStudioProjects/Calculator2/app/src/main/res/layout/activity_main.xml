<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bhavyas.calculator.MainActivity">

    <EditText
        android:id="@+id/t2"
        android:layout_width="390dp"
        android:layout_height="99dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="textEnd"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="88dp"
        android:layout_above="@+id/seven"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/one"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_above="@+id/zero"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_light"
        android:text="1"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="346dp" />

    <Button
        android:id="@+id/two"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_alignTop="@+id/one"
        android:layout_toEndOf="@+id/one"
        android:background="@android:color/holo_blue_bright"
        android:text="2"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="346dp" />

    <Button
        android:id="@+id/three"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_above="@+id/dot"
        android:layout_toEndOf="@+id/dot"
        android:background="@android:color/holo_blue_light"
        android:text="3"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="346dp" />

    <Button
        android:id="@+id/four"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_alignBottom="@+id/five"
        android:layout_below="@+id/seven"
        android:layout_toStartOf="@+id/five"
        android:background="@android:color/holo_blue_bright"
        android:text="4"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="265dp" />

    <Button
        android:id="@+id/five"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_below="@+id/seven"
        android:layout_toEndOf="@+id/one"
        android:background="@android:color/holo_blue_light"
        android:text="5"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="265dp" />

    <Button
        android:id="@+id/six"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:background="@android:color/holo_blue_bright"
        android:text="6"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="265dp"
        android:layout_below="@+id/nine"
        android:layout_toEndOf="@+id/two" />

    <Button
        android:id="@+id/seven"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_alignBottom="@+id/eight"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/eight"
        android:background="@android:color/holo_blue_light"
        android:text="7"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="187dp" />

    <Button
        android:id="@+id/eight"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_alignBottom="@+id/nine"
        android:layout_alignTop="@+id/nine"
        android:layout_toEndOf="@+id/seven"
        android:background="@android:color/holo_blue_bright"
        android:text="8"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="187dp" />

    <Button
        android:id="@+id/nine"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_alignTop="@+id/clr"
        android:layout_toEndOf="@+id/eight"
        android:background="@android:color/holo_blue_light"
        android:text="9"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="187dp" />

    <Button
        android:id="@+id/zero"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_bright"
        android:text="0"
        tools:layout_editor_absoluteX="81dp"
        tools:layout_editor_absoluteY="427dp" />

    <Button
        android:id="@+id/dot"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/zero"
        android:background="@android:color/holo_blue_light"
        android:text="."
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="427dp" />

    <Button
        android:id="@+id/equals"
        android:layout_width="81dp"
        android:layout_height="81dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/sub"
        android:background="@android:color/holo_blue_bright"
        android:text="="
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="427dp" />

    <Button
        android:id="@+id/clr"
        android:layout_width="144dp"
        android:layout_height="54dp"
        android:background="@android:color/holo_blue_dark"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="clear"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="187dp"
        android:layout_above="@+id/back"
        android:layout_toEndOf="@+id/nine" />

    <Button
        android:id="@+id/back"
        android:layout_width="144dp"
        android:layout_height="54dp"
        android:background="@android:color/background_light"
        android:text="back"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="241dp"
        android:layout_above="@+id/div"
        android:layout_alignStart="@+id/clr" />

    <Button
        android:id="@+id/div"
        android:layout_width="144dp"
        android:layout_height="54dp"
        android:background="@android:color/holo_blue_dark"
        android:text="/"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="292dp"
        android:layout_above="@+id/mul"
        android:layout_alignStart="@+id/back" />

    <Button
        android:id="@+id/mul"
        android:layout_width="144dp"
        android:layout_height="54dp"
        android:background="@android:color/background_light"
        android:text="x"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="346dp"
        android:layout_above="@+id/sub"
        android:layout_alignStart="@+id/div" />

    <Button
        android:id="@+id/sub"
        android:layout_width="144dp"
        android:layout_height="54dp"
        android:background="@android:color/holo_blue_dark"
        android:text="-"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="400dp"
        android:layout_above="@+id/add"
        android:layout_toEndOf="@+id/three" />

    <Button
        android:id="@+id/add"
        android:layout_width="144dp"
        android:layout_height="54dp"
        android:background="@android:color/background_light"
        android:text="+"
        tools:layout_editor_absoluteX="243dp"
        tools:layout_editor_absoluteY="454dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/mul" />

    <EditText
        android:id="@+id/t3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="textEnd"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/t2"
        android:layout_alignParentEnd="true"

        />

</RelativeLayout>
